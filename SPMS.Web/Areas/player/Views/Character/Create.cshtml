@model SPMS.ViewModel.character.EditCharacterViewModel

@{
    ViewData["Title"] = "Create Character";
}

<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Create Character</h1>
    </div>


    <div class="row-fluid">
        @{ await Html.RenderPartialAsync("_CreateOrEdit", Model); }
    </div>
</main>

@section Style {
    <link href="~/css/simplemde.min.css" rel="stylesheet" />
    <link href="~/css/pulse.css" rel="stylesheet" />
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/simplemde.min.js" asp-append-version="true"></script>
    <script src="~/js/biography.js" asp-append-version="true"></script>
}