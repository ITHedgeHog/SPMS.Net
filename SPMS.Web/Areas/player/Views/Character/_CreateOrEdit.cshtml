@model SPMS.ViewModel.character.EditCharacterViewModel


<form asp-action="ProcessEdit" method="post" asp-area="player">
    <div class="row">
        <div class="col-12">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12 col-md-9 col-9">
            <label asp-for="History" class="control-label"></label>
            <textarea asp-for="History" class="form-control"></textarea>
            <span asp-validation-for="History" class="text-danger"></span>
        </div>
        <div class="col-sm-12 col-md-3 col-3">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="PlayerId" />
            <div class="row mb-1">
                <div class="col-12">
                    <div class="input-group input-group-sm">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="">Name</span>
                        </div>
                        <input type="text" class="form-control" asp-for="Firstname" placeholder="Firstname">
                        <input type="text" class="form-control" asp-for="Surname" placeholder="Surname">
                    </div>
                </div>
            </div>
            @* TODO: Put avatar upload here *@
            <div class="row mb-1">
                <div class="input-group input-group-sm col-12">
                    <div class="input-group-prepend">
                        <label asp-for="StatusId" class="input-group-text"></label>
                    </div>
                    <select asp-for="StatusId" asp-items="Model.Statuses" class="form-control rounded-right"></select>
                    <span asp-validation-for="StatusId" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-1">
                <div class="input-group input-group-sm col-12">
                    <div class="input-group-prepend">
                        <label asp-for="PostingId" class="input-group-text"></label>
                    </div>
                    <select asp-for="PostingId" asp-items="Model.Postings" class="form-control rounded-right"></select>
                    <span asp-validation-for="StateId" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-1">
                <div class="col-12">
                    <div class="input-group input-group-sm">
                        <div class="input-group-prepend">
                            <label asp-for="DateOfBirth" class="input-group-text"></label>
                            <span class="sr-only">Date of birth</span>
                        </div>
                        <input asp-for="DateOfBirth" class="form-control" />
                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>

                    </div>
                </div>
            </div>
            <div class="row mb-1">
                <div class="col-12">
                    <div class="input-group input-group-sm">
                        <div class="input-group-prepend">
                            <label asp-for="Species" class="input-group-text"></label>
                        </div>
                        <input asp-for="Species" class="form-control" />
                        <span asp-validation-for="Species" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row mb-1">
                <div class="col-12">
                    <div class="input-group input-group-sm">
                        <div class="input-group-prepend">
                            <label asp-for="Homeworld" class="input-group-text"></label>
                        </div>
                        <input asp-for="Homeworld" class="form-control" />
                        <span asp-validation-for="Homeworld" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row mb-1">
                <div class="col-12">
                    <div class="input-group input-group-sm">
                        <div class="input-group-prepend">
                            <label asp-for="Gender" class="input-group-text"></label>
                        </div>
                        <input asp-for="Gender" class="form-control" />
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row mb-1">
                <div class="col-12">
                    <div class="input-group input-group-sm">
                        <div class="input-group-prepend">
                            <label asp-for="Born" class="input-group-text"></label>
                        </div>
                        <input asp-for="Born" class="form-control" />
                        <span asp-validation-for="Born" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row mb-1">
                <div class="col-12">
                    <div class="input-group input-group-sm">
                        <div class="input-group-prepend">
                            <label asp-for="Eyes" class="input-group-text"></label>
                        </div>
                        <input asp-for="Eyes" class="form-control" />
                        <span asp-validation-for="Eyes" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row mb-1">
                <div class="col-12">
                    <div class="input-group input-group-sm">
                        <div class="input-group-prepend">
                            <label asp-for="Hair" class="input-group-text"></label>
                        </div>
                        <input asp-for="Hair" class="form-control" />
                        <span asp-validation-for="Hair" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row mb-1">
                <div class="col-12">
                    <div class="input-group input-group-sm">
                        <div class="input-group-prepend">
                            <label asp-for="Height" class="input-group-text"></label>
                        </div>
                        <input asp-for="Height" class="form-control" />
                        <span asp-validation-for="Height" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row mb-1">
                <div class="col-12">
                    <div class="input-group input-group-sm">
                        <div class="input-group-prepend">
                            <label asp-for="Weight" class="input-group-text"></label>
                        </div>
                        <input asp-for="Weight" class="form-control" />
                        <span asp-validation-for="Weight" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row mb-1">
                <div class="input-group input-group-sm col-12">
                    <div class="input-group-prepend">
                        <label asp-for="StateId" class="input-group-text"></label>
                    </div>
                    @if (Model.IsAdmin)
                    {
                        <select asp-for="StateId" asp-items="Model.States" class="form-control rounded-right"></select>
                    }
                    else
                    {
                        <select asp-for="StateId" asp-items="Model.States" class="custom-select rounded-right disabled" disabled="disabled"></select>
                        <input type="hidden" asp-for="StateId" />

                    }
                    <span asp-validation-for="StateId" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-1">
                <div class="col-12">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </div>
</form>