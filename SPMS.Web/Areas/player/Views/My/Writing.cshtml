@model SPMS.Application.ViewModels.MyWritingViewModel

@{
    ViewData["Title"] = "Writing Portal " + Model.SiteTitle;
}

<main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Writing Portal</h1>
    </div>

    <div class="row">
        <div class="col-sm-12">
            @if (Model.Characters.Any() && Model.HasEpisode)
            {
                <form asp-controller="Authoring" asp-action="NewPost" method="post">
                    <button type="submit" class="btn btn-primary">Create New Post</button>
                </form>
            }
        </div>
    </div>

    <div class="row">

        <div class="col-12">
            <div class="row">
                <div class="col-6">
                    <h1>Draft Posts</h1>
                    <p>Resume your draft posts</p>
                    <ul class="list-group">

                        @foreach (var post in Model.DraftPosts)
                        {
                            <li class="list-group-item">
                                <div class="float-right">
                                    <a asp-area="player" asp-controller="Authoring" asp-action="Invite" asp-route-id="@post.Id" class="btn btn-outline-primary"><i class="fas fa-user-edit"></i>Invite authors</a>
                                    <a asp-area="player" asp-controller="Authoring" asp-action="Delete" asp-route-id="@post.Id" class="btn btn-outline-danger"><i class="fas fa-trash-alt"></i>Delete</a>
                                </div>
                                <div class="float-left">
                                    <a asp-action="post" asp-controller="authoring" asp-route-id="@post.Id"><i class="fas fa-file-alt"></i> @post.Title</a><div class="small text-right">Last updated @@ <i>@post.UpdatedAt</i> by <i>@post.LastAuthor</i></div>
                                </div>
                            </li>
                        }
                    </ul>
                </div>
                <div class="col-6">
                    <h1>Scheduled Posts</h1>
                    <p>These posts are scheduled to go live at a future time.</p>
                    <ul class="list-group">
                        @foreach (var post in Model.PendingPosts)
                        {
                            <li class="list-group-item"><a asp-action="post" asp-controller="authoring" asp-id="post.Id">@post.Title</a> <div class="small text-right">scheduled for <i>datetime</i></div></li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</main>



