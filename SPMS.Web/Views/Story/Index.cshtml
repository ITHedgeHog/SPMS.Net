@model SPMS.Web.ViewModels.Story.SeriesOverviewViewModel

@{
    ViewData["Title"] = "The story so far " + Model.SiteTitle;
}
<h1>Current Series &amp; Episodes</h1>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h2>@Model.CurrentSeries.Title</h2>
            @Html.Raw(Model.CurrentSeries.Description)
        </div>
    </div>
    <div class="row">
        @{ 
            string columnMdClass = "col-md-12";
            var hasBanner = !string.IsNullOrEmpty(Model.CurrentEpisode.Banner) ? true : false;
            if(hasBanner)
            {
                columnMdClass = "col-md-9";
            }
        }
        <div class="col-sm-12 @columnMdClass">
            <h2>@Model.CurrentEpisode.Title</h2>
            @Html.Raw(Model.CurrentEpisode.Description)
        </div>
        @if(hasBanner)
        {
            <div class="d-sm-none d-md-block col-md-3">
                <img src="https://dummyimage.com/120x240/000000/fff.gif&text=Episode+One" alt="Episode Banner" />
            </div>
        }
    </div>
</div>

