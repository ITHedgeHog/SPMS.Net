@model SPMS.Common.ViewModels.ViewModel

@using Microsoft.Extensions.Configuration
@using SPMS.Application.Common.Interfaces
@inject IConfiguration Configuration

@inject IApplicationVersion ApplicationVersion
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="Dan Taylor, Evan Scown and SPMS.Net contributors">
    <meta name="generator" content="SPMS.Net">
    <title>@ViewData["Title"] - @Model.SiteTitle</title>
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
    <!-- Google Fonts -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap">
    <!-- Bootstrap core CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.0/css/bootstrap.min.css" rel="stylesheet">
    <!-- Material Design Bootstrap -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.19.1/css/mdb.min.css" rel="stylesheet">
    <!-- Site CSS -->
    <link href="~/css/site.css" rel="stylesheet">

    @RenderSection("Style", false)

    @if (Model.UseAnalytics)
    {
        @Html.Raw(Model.SiteAnalytics)
    }
    else
    {
        <!-- Analytics Omitted -->
    }
</head>
<body>
    @{ await Html.RenderPartialAsync("_Menu", Model); }
    <div class="container">
        <main role="main" class="pt-3 pb-3">
            @RenderBody()
        </main>
    </div>
    <mini-profiler position="RenderPosition.BottomLeft" />
    <div class="navbar fixed-bottom navbar-dark primary-color">
        <div class="mr-auto ml-auto text-white-50">
            &copy; 2020 - Beyond the Darkness RPG.&nbsp;
            <a href="http://www.getspms.net" target="_blank" class="text-white">Powered by <i>SPMS.Net</i> @ApplicationVersion.Version</a>
            
            &nbsp;-&nbsp;<a asp-area="" asp-controller="Home" asp-action="Privacy" id="siteDisclaimer" class="text-white">Privacy & Disclaimer</a>
            &nbsp;-&nbsp;<a asp-area="" asp-controller="Rules" asp-action="Index" class="text-white">Rules</a>
            @if (User.IsInRole("player"))
            {
                <text>&nsbp;[<a asp-area="" asp-controller="Debug" asp-action="Index" class="text-white"> Debug </a>] </text>
            }
        </div>
    </div>
    <!-- JQuery -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <!-- Bootstrap tooltips -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.4/umd/popper.min.js"></script>
    <!-- Bootstrap core JavaScript -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.0/js/bootstrap.min.js"></script>
    <!-- MDB core JavaScript -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.19.1/js/mdb.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script type="text/javascript">
        $("#siteDisclaimer").popover({
            trigger: 'hover',
            html: true,
            placement: 'top',
            title: 'Website Disclaimer',
            content: '@Html.Raw(Model.SiteDisclaimer)'
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
